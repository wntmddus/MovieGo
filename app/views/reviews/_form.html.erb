<%= form_for [@movie, @review], url: {action: "create"} do |f| %>
<div class="form-group row">
  <%= f.label :score, class: 'col-sm-2 form-control-label' %>
<div class="col-sm-6" id='star-rating'>

</div>
</div>
  <div class="form-group row">
    <%= f.label :body, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-6">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  <br/>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <%= link_to "Back", index_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
<script>
$('#star-rating').raty({
	path: '/assets',
	scoreName: 'review[score]'
});
</script>
