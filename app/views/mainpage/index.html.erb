<br>
<div class="modal-body row">
  <div class="col-md-6", style="padding-left:0">
    <div class="container", style="padding-left:0">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
              <div class="form-inline">
                <ul class="button-group" style="display: inline-block" >
                  <h5>Sort by: &nbsp; </h5>
                  <%= link_to "Title", class: "btn btn-primary btn-md", sort: "title"%>,
                  <%= link_to "Released date", :sort => "release_date", class: "btn btn-primary btn-md"%>,
                  <%= link_to "Genre", :sort => "genre", class: "btn btn-primary btn-md"%>
                </ul>
              </div>
            </div>
          </div>
      </div>
    </div>
    <br>
    <% @movies.each do |movie| %>
      <%= render partial: 'movies/post', locals: { movie: movie } %>
    <% end %>
    <%= will_paginate @movies %>
  </div>
  <div class="col-md-4", style="padding-left:0">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
              <h3> Recent Reviews </h4>
              <% for i in 0..3 %>
                <div class="media">
                  <div class="media-body">
                    <h6 class="media-heading">
                      <div class="reviews">
                        <p class="inline"><%= @reviews[@reviews.length-1-i].body %>
                        <div class="star-rating" data-score= <%= @reviews[@reviews.length-1-i].score %> ></div></p>
                      </div>
                      Title - <%= @reviews[@reviews.length-1-i].movie.title %>
                      <hr style="height:1px">
                    </h6>
                  </div>
                </div>
              <% end %>
              <%= link_to "View all Reviews", show_path, class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
   <!-- Your second column here -->
   <div class="container">
     <div class="row">
       <div class="col-xs-12 col-sm-6 col-md-6">
           <div class="well well-sm">
             <h3> Recent Movies </h3>
               <% for i in 0..3 %>
                 <div class="media">
                   <div class="media-body">
                     <h6 class="media-heading">
                       <div class="reviews">
                         Title - <%= @recent_movies[i].title %>
                         <div class="star-rating" data-score= <%= @recent_movies[i].rating %> >
                         </div>
                       </div>
                       <hr style="height:1px">
                     </h6>
                   </div>
                 </div>
               <% end %>
               <%= link_to "View all Movies", show_path, class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
