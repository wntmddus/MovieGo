<div class="container", style="padding-left:0">
   <div class="row">
       <div class="col-xs-12 col-sm-6 col-md-6">
           <div class="well well-sm">
               <div class="row">
                   <div class="col-sm-6 col-md-4">
                       <img src="<%= movie.image_url %>"  alt="" class="img-rounded img-responsive" />
                       <div class="star-rating", style="padding-left: 13px;", data-score= <%= movie.rating %> >
                       </div>
                   </div>
                   <div class="col-sm-6 col-md-8">
                       <h4><%= link_to "#{movie.title}", movie_path(movie) %></h4>
                       <p>
                           <i class="glyphicon glyphicon-gift"></i><%= movie.release_date %>
                           <br/>
                           <i class="glyphicon glyphicon-gift"></i><%= movie.genre %>
                       </p>
                       <!-- Split button -->
                       <%= link_to "Write a review", new_movie_review_path(movie), class: "btn btn-primary btn-xs" %>
                       <% for i in 0..1 %>
                         <div class="media">
                           <div class="media-body">
                             <h6 class="media-heading">
                               <div class="reviews">
                                 <% if movie.reviews[i] != nil %>
                                   <div class="star-rating" data-score= <%= movie.reviews[i].score %> >
                                   </div>
                                   <%= movie.reviews[i].body %>
                                 <% end %>
                               </div>
                             </h6>
                           </div>
                         </div>
                       <% end %>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>
<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
