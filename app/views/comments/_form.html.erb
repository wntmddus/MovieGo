<h4>Add a comment</h4>
 <%= form_for [movie, review, comment] do |f| %>
  <form class="form-horizontal">
   <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field :name, class: 'form-control', style: 'width: 150px', placeholder: "Enter a name" %>
   </div>
   <div class="form-group">
     <%= f.label :body%>
     <%= f.text_field :body, class: 'form-control pull-right', placeholder: "Enter a new comment" %>
   </div>
   <div class="form-group">
   <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
 </div>
 </form>
 <% end %>
